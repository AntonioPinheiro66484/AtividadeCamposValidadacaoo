        <div class="col bg-white">
            <p class="text-start fs-6">Cadastro de Cliente</p>
            <p>
                <form action="/cadastrar" method="POST">
                    <div class="mb-3 text-start">
                        <label class="form-label">Nome:</label>
                        <input type="name" name="nome" class="form-control" id="nome" required>
                         <span id="nome-erro" class="erro"></span>
                    </div>
                    <div class="mb-3 text-start">
                        <label class="form-label">Telefone:</label>
                        <input type="number" name="telefone" pattern="[0-9]+" class="form-control" id="telefone"  placeholder="Apenas numeros podem ser digitados">
                        <span id="telefone-erro" class="erro"></span>
                    </div>
                    <div class= "mb-3 text-start">
                        <label class="form-label">E-mail:</label>
                        <input type="number" name="email" class="form-controll" id="email">
                        <span id="email-erro" class="erro"></span> 
                    </div>
                     <div class= "mb-3 text-start">
                        <label class="form-label">Idade:</label>
                        <input type="number" name="idade" class="form-controll" id="idade">
                        <span id="idade-erro" class="erro"></span> 
                    </div>
                    <div class= "mb-3 text-start">
                        <label class="form-label">Cep:</label>
                        <input type="text" name="cep" class="form-controll" id="cep">
                        <span id="cep-erro" class="erro"></span> 
                    </div>
                    <div class="mb-3 text-start">
                        <button type="submit" class="btn btn-primary">Cadastrar</button>
                    </div>
                </form>
            </p>
